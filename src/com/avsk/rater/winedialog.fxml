<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.shape.Cylinder?>
<DialogPane fx:controller="com.avsk.rater.WineController"
            xmlns:fx="http://javafx.com/fxml">
    <headerText>
        Fill in the information for a new wine
    </headerText>
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Name: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Color: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="colorField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Year: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="yearField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Producer: " GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="producerField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Variety: " GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="varietyField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Rating: " GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="ratingField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Price: " GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <TextField fx:id="priceField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        </GridPane>
    </content>
</DialogPane>